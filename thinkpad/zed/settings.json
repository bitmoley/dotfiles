// command palette (cmd-shift-p / ctrl-shift-p)
{
  // vim stuff
  "vim_mode": true,
  "relative_line_numbers": true,

  // fonts
  "ui_font_size": 16,
  "buffer_font_size": 18,
  "buffer_font_family": "JetBrainsMono Nerd Font",

  "theme": {
    "mode": "system",
    "light": "Tokyo Night",
    "dark": "One Dark"
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  }
}
